<link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">

<div class="container" style="margin-top: 20px; margin-bottom: 20px;">
	<div class="row panel">
		 <div>
		 	<%= image_tag @user.events.last.image.url, class: "col-md-4 bg_blur "%>
    	    
		</div>
        <div class="col-md-8  col-xs-12">
           <%= image_tag @user.avatar.url, class: "img-thumbnail picture hidden-xs" %>
           <%= image_tag @user.avatar.url, class: "img-thumbnail visible-xs picture_mob" %>
           <div class="header">
                <h1><%= @user.username %></h1>
                <h4>About Me</h4>
                <span>
                	<%= @user.bio %>
                </span>
                <br/>
                <span id="editPro">
	                <% if current_user %>
						<%= link_to "Edit Profile", edit_user_registration_path %>
					<% end %>
				</span>
           </div>
        </div>
    </div>   
    
</div>

<div class="container">

    <div class="row">
        <h1 id="title">
         My Hang Outs</h1>
    </div>
    <% @user.events.newest_first.each do |event| %>
  <!--   <div class="row"> -->
    
        <div class="col-sm-3">
            <div class="card">
                <canvas class="header-bg" width="250" height="70" id="header-blur"></canvas>
                <div class="avatar">
                    <%= image_tag event.image.url(:thumb) %>
                </div>
                <div class="content">
                    <h4><%= link_to event.title, event_path(event.id) %> </h4>
                    <h5><%= event.body %></h5>
                    <p><button type="button" class="btn btn-default">Message</button></p>
                </div>
            </div>
        </div>
    <% end %>
</div>

        


	
