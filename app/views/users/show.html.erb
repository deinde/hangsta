<div id = "UserProfile" class="container-fluid">
	<h5 id="name"><%= @user.username %></h5>
	<div id= 'ProPic' class="col-md-4"> 
		<p><%= image_tag @user.avatar.url(:medium) %></p>
	</div>
	<div id="AboutMe">
		<h3>About Me</h3>
		<p><%= @user.bio %></p>
		<% if current_user %>
			<%= link_to "Edit Profile", edit_user_registration_path %>
		<% end %>	
	</div>

	<div>
		<p>
			<% if @user != current_user %>
			<%= link_to "Message", "#", class: "btn btn-success btn-xs start-conversation", "data-sid" => current_user.id, "data-rip" => @user.id %>
			<% end %>
		</p>
	</div>

</div>
</br>

<div class="container-fluid">
	<div class="col-md-12">
		<% @user.events.newest_first.each do |u| %>
			<%= image_tag u.image.url(:thumb) %>
			<%= u.title %>
			<%= u.body %>
		<% end %>
	</div>	
</div>