


<div class="jumbotron col-lg-12 col-md-12 col-sm-12 col-xs-12">
   
 <div class="row">
 
  <h2 class="text-center">an awesome way to meet people</h2>

  <button id="boot" type="button" class="btn btn-danger "><%= link_to "Sign Up", new_user_registration_path %></button>
</div>
</div>
 <div  id="welcome-row" class="row">
  <h2 class="h2">Sign in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, placeholder:"email", autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, placeholder:"password", autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>
</div> 
